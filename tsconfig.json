{
  "compilerOptions": {
    "baseUrl": "./",
    "importsNotUsedAsValues": "preserve",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES5",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
  },
  "include": ["./**/*"]
}
